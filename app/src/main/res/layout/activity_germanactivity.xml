<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="#FF0000"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="German Cuisine"
            app:fontFamily="cursive" />

        <Button
            android:id="@+id/pancakesbutton"
            android:layout_width="162dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"

            android:text="Pancakes" />

        <Button
            android:id="@+id/potbutton"
            android:layout_width="162dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:text="Potato Casserole" />

        <Button
            android:id="@+id/dumpbutton"
            android:layout_width="165dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"

            android:text="Dumplings" />

        <Button
            android:id="@+id/greenbutton"
            android:layout_width="180dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Green Beans" />

        <Button
            android:id="@+id/porkbutton"
            android:layout_width="175dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:text="Pork Shnitzel" />
    </LinearLayout>



</RelativeLayout>

